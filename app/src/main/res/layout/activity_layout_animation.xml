<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:background="@color/google_blue"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="Hello"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:background="@color/google_red"
        android:gravity="center"
        android:text="Hello"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_1"
        app:layout_constraintRight_toRightOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:background="@color/google_orange"
        android:gravity="center"
        android:text="Hello"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_1"
        app:layout_constraintRight_toRightOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_4"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:background="@color/google_green"
        android:gravity="center"
        android:text="Hello"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_1"
        app:layout_constraintRight_toRightOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_3" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/google_blue"
        app:cardCornerRadius="2dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_1"
        app:layout_constraintRight_toRightOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_4">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Hello"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_1"
            app:layout_constraintRight_toRightOf="@id/tv_1"
            app:layout_constraintTop_toBottomOf="@id/tv_3" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>